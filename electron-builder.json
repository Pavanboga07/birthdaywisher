{
  "appId": "com.birthdayreminder.app",
  "productName": "Birthday Reminder",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist-react/**/*",
    "electron/**/*",
    "package.json"
  ],
  "win": {
    "target": ["nsis"],
    "icon": "public/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Birthday Reminder"
  }
}
