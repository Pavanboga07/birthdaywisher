{
  "appId": "com.wishmailer.app",
  "productName": "WishMailer",
  "asar": false,
  "directories": {
    "output": "dist"
  },
  "files": [
    "package.json",
    "electron/**/*",
    "dist-react/**/*",
    "node_modules/**/*",
    "public/wishmailer.jpeg"
  ],
  "win": {
    "target": "nsis",
    "icon": "public/wishmailer.jpeg"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "WishMailer"
  }
}
